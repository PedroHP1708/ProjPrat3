<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corFundo"
    android:orientation="vertical"
    tools:context=".TelaLogin">


    <TextView
        android:id="@+id/login"
        android:layout_width="189dp"
        android:layout_height="54dp"
        android:fontFamily="@font/alata"
        android:gravity="center_horizontal|center_vertical"
        android:text="LOGIN"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="42dp"
        android:textColor="@color/corFonte"
        android:textFontWeight="400"
        android:textSize="36dp"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="48dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:fontFamily="@font/alef"
        android:gravity="top"
        android:text="Email"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="166dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="180dp" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_marginTop="163dp"
        android:layout_marginLeft="100dp"
        android:textColor="@color/white"
        android:background="@drawable/custom_edt"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="174dp" />

    <TextView
        android:id="@+id/senha"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/alef"
        android:gravity="top"
        android:text="Senha"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="219dp"
        android:textColor="@color/white"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="251dp" />


    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="219dp"
        android:layout_height="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/custom_edt"
        android:inputType="textPassword"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="242dp"
        tools:layout_editor_absoluteY="627dp" />

    <RadioGroup
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="280dp">

        <RadioButton
            android:id="@+id/rbPessoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="331dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="Pessoa Física"
            android:buttonTint="@color/white"
            tools:layout_editor_absoluteY="379dp"/>

        <RadioButton
            android:id="@+id/rbEmpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="252dp"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="Empresa"
            android:buttonTint="@color/white"
            tools:layout_editor_absoluteY="486dp" />

    </RadioGroup>


    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="143dp"
        android:layout_height="47dp"
        android:textSize="20dp"
        android:text="Entrar"
        android:fontFamily="@font/alef"
        android:backgroundTint="@color/white"
        android:textColor="@color/roxo"
        android:textFontWeight="700"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="386dp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="405dp" />

    <Button
        android:id="@+id/btnCadEmp"
        android:layout_width="198dp"
        android:layout_height="41dp"
        android:fontFamily="@font/alef"
        android:backgroundTint="@color/corFonte"
        android:textColor="@color/roxo"
        android:text="Cadastro Empresa"
        android:textFontWeight="700"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="498dp"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="379dp" />

    <Button
        android:id="@+id/btnCadPes"
        android:layout_width="198dp"
        android:layout_height="61dp"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="553dp"
        android:backgroundTint="@color/corFonte"
        android:fontFamily="@font/alef"
        android:text="Cadastro Pessoa Física"
        android:textColor="@color/roxo"
        android:textFontWeight="700"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="499dp" />


</RelativeLayout>