<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaPrincipalEmpresa"
    android:background="@color/corFundo">

    <View
        android:id="@+id/viFoto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/custom_photo_place" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="41dp"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="75dp"
        android:text="Pesquisar Vagas"
        android:background="@drawable/custom_barra_pesquisa"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:background="#B5CEFF"
        android:focusable="false" />

    <TextView
        android:id="@+id/filtrar_por"
        android:layout_width="98dp"
        android:layout_height="27dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:text="Filtrar por:"
        android:fontFamily="@font/alef"
        android:textColor="@color/white"
        android:textSize="18dp"
        />

    <Button
        android:id="@+id/btnArea"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="131dp"
        android:backgroundTint="@color/corFonte"
        android:text="Área"
        android:textColor="@color/roxo"
        android:textSize="14dp"
        android:fontFamily="@font/alef"
        />

    <Button
        android:id="@+id/btnEmpresa"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="181dp"
        android:backgroundTint="@color/corFonte"
        android:fontFamily="@font/alef"
        android:text="Empresa"
        android:textColor="@color/roxo"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btnSalario"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="181dp"
        android:backgroundTint="@color/corFonte"
        android:fontFamily="@font/alef"
        android:text="Salário"
        android:textColor="@color/roxo"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btnLocalizacao"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="131dp"
        android:backgroundTint="@color/corFonte"
        android:fontFamily="@font/alef"
        android:text="Localização"
        android:textColor="@color/roxo"
        android:textSize="14dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:background="#B5CEFF"
        android:focusable="false" />



</RelativeLayout>