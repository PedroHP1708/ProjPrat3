<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/viFoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="41dp"
            android:background="@drawable/custom_photo_place" />

        <TextView
            android:id="@+id/tvItemNomeUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="120dp"
            android:text="Nome"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tvItemTituloVaga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="120dp"
            android:text="Titulo Vaga"
            android:textSize="18dp"/>


        <Button
            android:id="@+id/btnAprovar"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="120dp"
            android:backgroundTint="@color/corFonte"
            android:fontFamily="@font/alef"
            android:text="Aprovar"
            android:textSize="15dp"
            android:textColor="#574294"/>

        <Button
            android:id="@+id/btnRejeitar"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="260dp"
            android:backgroundTint="@color/corFonte"
            android:fontFamily="@font/alef"
            android:text="Rejeitar"
            android:textSize="15dp"
            android:textColor="#574294"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>